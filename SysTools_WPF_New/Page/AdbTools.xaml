<Page x:Class="AdbTools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:muxc="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:SysTools_WPF_New"
      mc:Ignorable="d" 
      d:DesignHeight="610" d:DesignWidth="1040"
      Width="1040" Height="610" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="功能预留页" VerticalAlignment="Top" FontSize="40" Foreground="#FFAEDBFE" Margin="0,90,0,0" Grid.IsSharedSizeScope="True" />
        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,0,0,60" HorizontalAlignment="Center" ><InlineUIContainer>
                <muxc:FontIcon FontFamily="{DynamicResource SegoeIcons}" Glyph="&#xE822;" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFAEDBFE" FontSize="100" FontWeight="Light" />
            </InlineUIContainer></TextBlock>
        <TextBlock x:Name="Info" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="40" Foreground="#FFAEDBFE" Margin="0,-80,0,0" ><Run Text="如有需要添加的功能请前往关于页面联系我们"/></TextBlock>

    </Grid>
</Page>
