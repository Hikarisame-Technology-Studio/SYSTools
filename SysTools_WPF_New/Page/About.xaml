<Page x:Class="About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:muxc="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:SysTools_WPF_New"
      mc:Ignorable="d"       
      d:DesignHeight="610" d:DesignWidth="1040"
      MinWidth="1040" MinHeight="610" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border  BorderThickness="1" CornerRadius="5" Grid.ColumnSpan="2">
            <Border.Background>
                <SolidColorBrush Color="#FF202020" Opacity="0.5"/>
            </Border.Background>
        </Border>
        <Image x:Name="image" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="/SysTools_WPF_New;component/B-LOGO.png" Margin="0,0,-100,-100" Opacity="0.1" Grid.Column="1" Height="430"/>
        <Image Source="/LOGO.ico" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="70" Margin="20,20,0,0"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,35,0,0" FontSize="25" Text="SYSTools" Foreground="White"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,67,0,0" FontSize="10" Text="Hikarisame Technology Studio" Foreground="White"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,110,0,0" FontSize="15" Text="软件开发 :" Foreground="White"/>
        <muxc:HyperlinkButton x:Name="Forever" Content="@Forever" Margin="105,104,0,0" VerticalAlignment="Top" FontSize="15" Height="32" VerticalContentAlignment="Top" NavigateUri="https://github.com/Forever331" Cursor="Hand"/>
        <muxc:HyperlinkButton x:Name="MiRai" Content="@39MiRai" Margin="185,104,0,0" VerticalAlignment="Top" FontSize="15" Height="32" VerticalContentAlignment="Top" NavigateUri="https://github.com/39MiRai" Cursor="Hand"/>
        <muxc:HyperlinkButton x:Name="tz95" Content="@tz95" Margin="265,104,0,0" VerticalAlignment="Top" FontSize="15" Height="32" VerticalContentAlignment="Top" NavigateUri="https://github.com/tz95" Cursor="Hand"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,150,0,0" FontSize="15" Text="UI设计 :" Foreground="White"/>
        <muxc:HyperlinkButton x:Name="ForeverUI" Content="@Forever" Margin="95,144,0,0" VerticalAlignment="Top" FontSize="15" Height="32" VerticalContentAlignment="Top" NavigateUri="https://github.com/Forever331" Cursor="Hand"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,190,0,0" FontSize="15" Text="软件协助 :" Foreground="White"/>
        <muxc:HyperlinkButton x:Name="KanChan" Content="@偷税师柑柑" Margin="105,184,0,0" VerticalAlignment="Top" FontSize="15" Height="32" VerticalContentAlignment="Top" Cursor="Hand"/>
        <Button x:Name="QQ" Content="QQ群" Margin="30,245,0,0" VerticalAlignment="Top" Width="135" Height="33"/>
        <Button x:Name="Web" Content="官网" Margin="30,300,0,0" Width="135" Height="33" VerticalAlignment="Top"/>
        <Button x:Name="Github" Content="Github" Margin="30,355,0,0" Width="135" Height="33" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,0,0,110" FontSize="15" Text="第一次写像样的软件 虽然代码只是能用的阶段 有问题还请提交Issue" Foreground="#FFA4A4A4"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,0,0,85" FontSize="15" Foreground="#FFA4A4A4" Text="该有的都会有的 时间问题（Flag）"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" FontSize="15" Foreground="White" Text="©2018-2022 Hikarisame Technology Studio. All Rights Reserved."/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,0,0,60" FontSize="15" Foreground="#FFA4A4A4" Text="软件图片背景：Forever"/>
        <Button Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20" Width="60" Height="60" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" Background="{x:Null}" Focusable="False">
            <muxc:FontIcon FontFamily="/SysTools_WPF_New;component/Resource/#Segoe Fluent Icons" Glyph="&#xE117;" />
        </Button>




    </Grid>
</Page>
